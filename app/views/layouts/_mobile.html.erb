<div id="mobileCarousel" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner" role="listbox">
    <div class="carousel-item active">
        <%= image_tag("notebook.jpg", :alt => "notebook") %>
        <div class="carousel-caption">
          <h1 class="display-3">PromptMe</h1>
        </div>
    </div>
    <div class="carousel-item" id="river_boat">
        <%= image_tag("river_boat.jpg", :alt => "river_boat") %>
        <div class="carousel-caption">
          <h1 class="display-3">Just Write</h1>
          <p>No backspace. No copy. No paste.</p>
        </div>
    </div>
    <div class="carousel-item" id="candles">
        <%= image_tag("candles.jpg", :alt => "candles") %>
        <div class="carousel-caption">
          <h1 class="display-3">Visit on desktop</h1>
        </div>
    </div>
      <a class="carousel-control-prev" href="#my_carousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#my_carousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
  </div>
</div>
